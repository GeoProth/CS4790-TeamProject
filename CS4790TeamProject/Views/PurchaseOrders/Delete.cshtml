@model CS4790TeamProject.Models.PurchaseOrder

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>PurchaseOrder</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateOrdered)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOrdered)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VendorPO)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VendorPO)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Received)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Received)
            {
                <h5 style="color:green;font:bold">
                    Received
                </h5>
            }
            else if (Model.DeliveryDate.Day < DateTime.Now.Day)
            {
                <h5 style="color:red;font:bold">
                    Overdue
                </h5>
            }
            else
            {
                <h5 style="color:blue;font:bold">
                    Pending
                </h5>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastModifiedBy)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastModifiedBy)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastModifiedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastModifiedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vendor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vendor.VendorId)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PurchaseOrderId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-info" asp-action="Index">Cancel</a>
    </form>
</div>

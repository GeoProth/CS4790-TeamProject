@model CS4790TeamProject.Models.ViewModels.OrdersViewModel

@{
    ViewData["Title"] = "Create Purchase Order";
    
}
<body>
    <h2 style="text-align:center">Create Purchase Order</h2>
    <hr />
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-0">
                    <label asp-for="PurchaseOrder.Vendor.VendorName" class="control-label">Vendor:</label>
                    <div class="input-group">
                        <select asp-for="PurchaseOrder.Vendor.VendorName" class="form-control" id="vendorID" name="VendorID" asp-items="@ViewBag.Vendors"></select>
                        <div class="col-1 text-right">
                            <span class="input-group-append">
                                <a class="btn btn-sm" data-toggle="modal" data-target="#createVendorModal">
                                    <i class="fa fa-plus-circle" style="font-size:36px;color:#337AB7;margin-top:-10px;"></i>
                                </a>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="PurchaseOrder.DateOrdered" class="control-label">Order Date:</label>
                    <input name="DateOrdered" asp-for="PurchaseOrder.DateOrdered" id="dateOrdered" class="form-control" />
                    <span asp-validation-for="PurchaseOrder.DateOrdered" class="text-danger"></span>

                </div>
            </div>
            <div class="col-2"></div>
            <div class="col-4">
                <div class="form-group mb-2">
                    <label asp-for="PurchaseOrder.VendorPO" class="control-label">Vendor PO:</label>
                    <input name="VendorSKU" asp-for="PurchaseOrder.VendorPO" id="vendorPO" class="form-control" />
                    <span asp-validation-for="PurchaseOrder.VendorPO" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PurchaseOrder.DeliveryDate" class="control-label">Delivery Date:</label>
                    <input name="DeliveryDate" asp-for="PurchaseOrder.DeliveryDate" id="deliveryDate" class="form-control" />
                    <span asp-validation-for="PurchaseOrder.DeliveryDate" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row border p-3 mb-3">
            <div class="col-4">
                <div class="form-inline mb-3">
                    <label asp-for="TempOrderItem.Item.ItemId" class="control-label">Part:</label>
                    <div class="input-group">
                        <select id="itemInfo" name="ItemID" asp-for="TempOrderItem.Item.ItemId" class="form-control" asp-items="@ViewBag.Items"></select>
                        <div class="text-right ml-3">
                            <span class="input-group-append">
                                <a class="btn btn-sm" data-toggle="modal" data-target="#createPartModal">
                                    <i class="fa fa-plus-circle" style="font-size:36px;color:#337AB7;margin-top:-10px;"></i>
                                </a>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="form-inline pl-1 mb-3 fa-pull-right">
                    <label asp-for="TempOrderItem.Item.MeasureID" class="control-label mr-3">Unit of Measure</label>
                    <select asp-for="TempOrderItem.Item.MeasureID" name="MeasureID" class="form-control" asp-items="@ViewBag.Measures"></select>
                    <span asp-validation-for="TempOrderItem.Item.MeasureID" class="text-danger"></span>
                </div>
                <div class="form-inline pl-1 mb-3 fa-pull-right">
                    <label asp-for="TempOrderItem.QuantityOrdered" class="control-label mr-3">Quantity:</label>
                    <input id="qntyOrdered" name="QntyOrdered" asp-for="TempOrderItem.QuantityOrdered" min="0" type="number" class="form-control col-4" />
                    <span asp-validation-for="TempOrderItem.QuantityOrdered" class="text-danger"></span>
                </div>
                <div class="form-inline mb-3 fa-pull-right">
                    <label asp-for="TempOrderItem.Price" class="control-label mr-3">Price:</label>
                    <div class="form-inline">
                        $<input id="price" name="Price" asp-for="TempOrderItem.Price" class="form-control ml-1 col-4" />
                    </div>
                    <span asp-validation-for="TempOrderItem.Price" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" name="submitButton" value="Add Part" @*id="btnAddPart"*@ class="btn btn-primary fa-pull-right" />
                </div>
            </div>
            <div class="col-1"></div>
            <div class="row border col-7" style="height:55vh;overflow:auto;background-color:dimgray">
                <table id="tblItems" class="table table-striped p-0" style="width:100%">
                    <thead class="thead-dark table-bordered border-primary">
                        <tr class="card-header">
                            <th><h5>Item</h5></th>
                            <th><h5>Quantity</h5></th>
                            <th><h5>Price</h5></th>
                            <th class="pl-4"><h5><i class="fa fa-trash-o"></i></h5></th>
                        </tr>
                    </thead>
                    <tbody style="background-color:dimgray;color:black">
                        @if (Model.OrderItems.Count() > 0)
                        {
                            @foreach (var item in @Model.OrderItems)
                            {
                                <tr class="row">
                                    <td>@item.Item.ItemName</td>
                                    <td>@item.QuantityOrdered</td>
                                    <td>@item.Price</td>
                                    <td><input type="submit" name="submitButton" class="btn btn-danger btn-sm" value="Remove"/>@*<i class="fa fa-trash-o"></i>*@</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr class="row"><td class="col-12 text-center">EMPTY</td></tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-6 text-center">
                <input type="submit" name="submitButton" @*id="btnSave"*@ value="Create Order" class="btn btn-success" />
            </div>
            <div class="col-6 text-center">
                <a class="btn btn-danger" style="width:auto;" asp-action="Index">Cancel</a>
            </div>
        </div>
    </form>

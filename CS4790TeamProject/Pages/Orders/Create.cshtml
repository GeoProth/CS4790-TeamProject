@page
@model CS4790TeamProject.Pages.Orders.CreateModel

@{
    ViewData["Title"] = "Create";
    List<OrderItem> SaveList = new List<OrderItem>();

}
<body>
    <h2 style="text-align:center">Create Order</h2>
    <hr />
    <form method="post" action="/Create?handler=AddList">
        <div class="row">
            <div class="col-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-0">
                    <label asp-for="OrdersVM.PurchaseOrder.Vendor.VendorName" class="control-label">Vendor:</label>
                    <div class="input-group">
                        <select asp-for="OrdersVM.PurchaseOrder.Vendor.VendorName" class="form-control" name="VendorID" asp-items="@ViewBag.Vendors"></select>
                        <div class="col-1 text-right">
                            <span class="input-group-append">
                                <a class="btn btn-sm" data-toggle="modal" data-target="#createVendorModal">
                                    <i class="fa fa-plus-circle" style="font-size:36px;color:#337AB7;margin-top:-10px;"></i>
                                </a>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="OrdersVM.PurchaseOrder.DateOrdered" class="control-label">Order Date:</label>
                    <input name="DateOrdered" asp-for="OrdersVM.PurchaseOrder.DateOrdered" class="form-control" />
                    <span asp-validation-for="OrdersVM.PurchaseOrder.DateOrdered" class="text-danger"></span>

                </div>
            </div>
            <div class="col-2"></div>
            <div class="col-4">
                <div class="form-group mb-2">
                    <label asp-for="OrdersVM.PurchaseOrder.VendorPO" class="control-label">Vendor PO:</label>
                    <input name="VendorSKU" asp-for="OrdersVM.PurchaseOrder.VendorPO" class="form-control" />
                    <span asp-validation-for="OrdersVM.PurchaseOrder.VendorPO" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OrdersVM.PurchaseOrder.DeliveryDate" class="control-label">Delivery Date:</label>
                    <input name="DeliveryDate" asp-for="OrdersVM.PurchaseOrder.DeliveryDate" class="form-control" />
                    <span asp-validation-for="OrdersVM.PurchaseOrder.DeliveryDate" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row border p-3 mb-3">
            <div class="col-4">
                <div class="form-inline mb-3">
                    <label asp-for="OrdersVM.TempOrderItem.Item" class="control-label mr-3">Part:</label>
                    <div class="input-group">
                        <select id="itemInfo" name="ItemID" asp-for="OrdersVM.TempOrderItem.Item.ItemId" class="form-control" asp-items="@ViewBag.Items"></select>
                        <div class="text-right ml-3">
                            <span class="input-group-append">
                                <a class="btn btn-sm" data-toggle="modal" data-target="#createPartModal">
                                    <i class="fa fa-plus-circle" style="font-size:36px;color:#337AB7;margin-top:-10px;"></i>
                                </a>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="form-inline mb-3 fa-pull-right">
                    <label asp-for="OrdersVM.TempOrderItem.Item.MeasureID" class="mr-3">Unit of Measurement:</label>
                    <select name="MeasureID" asp-for="OrdersVM.TempOrderItem.Item.MeasureID" class="form-control" asp-items="@ViewBag.Measures"></select>
                </div>
                <div class="form-inline pl-1 mb-3 fa-pull-right">
                    <label asp-for="OrdersVM.TempOrderItem.QuantityOrdered" class="control-label mr-3">Quantity:</label>
                    <input id="qntyOrdered" name="QuantityOrdered" asp-for="OrdersVM.TempOrderItem.QuantityOrdered" min="0" type="number" class="form-control col-4" />
                    <span asp-validation-for="OrdersVM.TempOrderItem.QuantityOrdered" class="text-danger"></span>
                </div>
                <div class="form-inline mb-3 fa-pull-right">
                    <label asp-for="OrdersVM.TempOrderItem.Price" class="control-label mr-3">Price:</label>
                    <div class="form-inline">
                        $<input id="price" name="Price" asp-for="OrdersVM.TempOrderItem.Price" class="form-control ml-1 col-4" />
                    </div>
                    <span asp-validation-for="OrdersVM.TempOrderItem.Price" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input id="btnAddPart" type="button" value="Add Part" class="btn btn-primary fa-pull-right" />
                </div>
            </div>
            <div class="col-1"></div>
            <div class="row border col-7" style="height:55vh;overflow:auto;background-color:dimgray">
                <table id="tblItems" class="table table-striped p-0 col-12" style="width:100%">
                    <thead class="thead-dark table-bordered border-primary">
                        <tr class="card-header">
                            <th><h5>Item</h5></th>
                            <th><h5>Quantity</h5></th>
                            <th><h5>Price</h5></th>
                            <th class="pl-4"><h5><i class="fa fa-trash-o"></i></h5></th>
                        </tr>
                    </thead>
                    <tbody style="background-color:dimgray;color:black"></tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-6 text-center">
                <input type="button" id="btnSave" value="Create Order" class="btn btn-success" />
            </div>
            <div class="col-6 text-center">
                <a class="btn btn-danger" style="width:auto;" asp-page="./Index">Cancel</a>
            </div>
        </div>
    </form>

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript" src="http://ajax.cdnjs.com/ajax/libs/json2/20110223/json2.js"></script>

    <script type="text/javascript">

        $("body").on("click", "#btnAddPart", function () {
            //Reference item boxes stor them in vars
            var txtName = $("#itemInfo option:selected").text();
            var item = $("#itemInfo");
            var txtQty = $("#qntyOrdered");
            var txtPrice = $("#price");


            //Get the reference of the Table's TBODY element.
            var tBody = $("#tblItems > TBODY")[0];

            //Add Row
            var row = tBody.insertRow(-1);

            //add name cell
            var cell = $(row.insertCell(-1));
            cell.html(txtName);

            cell = $(row.insertCell(-1));
            cell.html(txtQty.val());

            cell = $(row.insertCell(-1));
            cell.html(txtPrice.val());

            cell = $(row.insertCell(-1));
            var btnRemove = $("<button>");
            btnRemove.attr("type", "button");
            btnRemove.attr("onclick", "Remove(this);");
            btnRemove.attr("style", "background-color:red");
            btnRemove.append($("<i class='fa fa-trash-o'></i></button>"));
            cell.append(btnRemove);

            //clear boxes
            //txtName.val();
            txtQty.val(0);
            txtPrice.val(0);
        });

        function Remove(button) {
            //Determine Row
            var row = $(button).closest("TR");
            var name = $("TD", row).eq(0).html();
            if (confirm("Do you want to delete: " + name)) {
                var table = $("#tblItems")[0];
                table.deleteRow(row[0].rowIndex);
            }
        };

        $("body").on("click", "#btnSave", function () {
            //Loop through tabel rows and build a JSON array.
            var OrderItems = new Array();
            $("#tblItems TBODY TR").each(function () {
                var row = $(this);
                var OrderItem = {};
                OrderItem.Name = row.find("TD").eq(0).html();
                OrderItem.Qty = row.find("TD").eq(1).html();
                OrderItem.Price = row.find("TD").eq(2).html();
                OrderItems.push(OrderItem);
            });

            $.ajax({
                type: "POST",
                url: "/Create?handler=AddList",
                beforeSend: function (xhr) {
                    xhr.setRequestHeader("XSRF-TOKEN",
                        $('input:hidden[name="_RequestVerificationToken"]').val());
                },
                data: JSON.stringify(OrderItems),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (r) {
                    alert(r + " record(s) inserted.");
                },
                failure: function (response) {
                    alert(response);
                }
            });
        });

    </script>
</body>
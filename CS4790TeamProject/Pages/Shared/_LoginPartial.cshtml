@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div>
    @if (SignInManager.IsSignedIn(User))
    {

        <div class="nav-item float-right" style="display:inline;">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-light" style="font-family:'Comic Sans MS';"><i id="userIcon" class="fa fa-user-circle-o"></i>Logout</button>
            </form>
        </div>
        <br/>
        <div class="nav-item float-right" style="display:inline;">
            <a id="navbarUsername" class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" >@User.Identity.Name </a>
        </div>

    }
    else
    {
        <div class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login"><i class="fa fa-user-circle-o" id="userIcon"></i></a>
        </div>
    }
</div>

